<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#0f5355</item>
        <item name="colorPrimaryDark">#0f5355</item>
        <item name="colorAccent">#0f5355</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheeme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#0f5355</item>
        <item name="colorPrimaryDark">#0f5355</item>
        <item name="colorAccent">#0f5355</item>
        <item name="android:navigationBarColor" tools:targetApi="21">#0f5355</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>
    <style name="DescriptiveRegularTextTheme">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">#9b8b5d</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TertiaryTextTheme">
        <item name="android:textSize">@dimen/tertiary_text_size</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="SecondaryTextTheme">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">23sp</item>
        <item name="fontFamily">@font/allerta_stencil</item>
    </style>
    <style name="TitleTextTheme">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="BoldTitleTextTheme">
        <item name="android:fontFamily">@font/amita_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ListTitleTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LogInTheme" parent="AppTheme">
        <item name="android:statusBarColor" tools:targetApi="21">#9b8b5d</item>
        <item name="android:navigationBarColor" tools:targetApi="21"  >#9b8b5d</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>
    <style name="Appbarthem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#9b8b5d</item>
        <item name="colorAccent">#0f5355</item>
        <item name="android:fontFamily">@font/amita_bold</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>
</resources>