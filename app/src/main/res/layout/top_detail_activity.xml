<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".top_places.Top_DetailedProductsActivity">
    <com.google.android.material.appbar.AppBarLayout
        style="@style/Appbarthem"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="#0f5355"
        android:fitsSystemWindows="true"
        android:fontFamily="@font/amita_bold">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapseing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0f5355"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorAccent"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_gravity="center|end"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Appbarthem"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:fontFamily="@font/amita_bold"
                android:gravity="center"
                app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-70dp"
        android:background="@drawable/layout_bg"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_max">
            <TextView
                android:id="@+id/place_name"
                style="@style/BoldTitleTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="place_name"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#9b8b5d"
                android:fontFamily="@font/amita_bold" />
            <TextView
                android:id="@+id/state_name"
                style="@style/SecondaryTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="state_name"
                android:textSize="22dp"
                android:textColor="#9b8b5d"
                android:gravity="center"
                android:fontFamily="@font/amita_bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#9b8b5d"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:elevation="10dp"
                android:weightSum="3">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/map"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/map"/>
                <View
                    android:layout_width="3dp"
                    android:layout_height="50dp"
                    android:background="#9b8b5d"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mapres"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_height="50dp"
                    android:src="@drawable/restu"/>
                <View
                    android:layout_width="3dp"
                    android:layout_height="50dp"
                    android:background="#9b8b5d"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/maphotel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_height="50dp"
                    android:src="@drawable/hotel"/>
            </LinearLayout>
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arapey"
                android:padding="5dp"
                android:lineSpacingExtra="10dp"
                android:justificationMode="inter_word"
                android:textSize="15dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>